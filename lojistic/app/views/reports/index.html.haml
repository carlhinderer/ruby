%h2 Reports List

%table#reports-list
  %thead
    %tr
      %th Type
      %th Start Date
      %th End Date
      %th Download
      %th Delete
  %tbody
    - @reports.each do |report|
      %tr
        %td 
          = link_to "#{report.report_type}", report_path(report)
        %td #{report.start_date}
        %td #{report.end_date}
        %td Download Link
        %td 
          = link_to 'Delete', report_path(report), :method => :delete, 
              :data => {:confirm => 'Are you sure?'}

= link_to 'Add New Report', new_report_path